<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="29dp" android:id="@+id/_reviewNameTextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toStartOf="@+id/_reviewRatingTextView"
            android:layout_marginEnd="40dp"/>
    <ImageView
            android:layout_width="99dp"
            android:layout_height="90dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/_reviewProfilePictureImageView"
            app:layout_constraintEnd_toStartOf="@+id/_reviewTextTextView"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/_reviewNameTextView"/>
    <TextView
            android:text="TextView"
            android:layout_width="216dp"
            android:layout_height="114dp" android:id="@+id/_reviewTextTextView"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/_reviewRatingTextView" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="91dp"
            android:layout_height="20dp" android:id="@+id/_reviewRatingTextView"
            android:layout_marginEnd="155dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="27dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>