<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/_reivewToolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="396dp"
            android:layout_height="751dp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/_reivewToolbar">
        <androidx.constraintlayout.widget.ConstraintLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="387dp"
                    android:layout_height="446dp"
                    android:id="@+id/_reviewsRecyclerView"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/_customerReviewsTextView"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="368dp"
                    android:layout_height="228dp"
                    android:id="@+id/textInputLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="9dp" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="186dp"
                        android:inputType="textMultiLine|textPersonName"
                        android:text="Add Review Here..."
                        android:ems="10"
                        android:id="@+id/_personalReviewEditText" android:layout_weight="1" android:paddingStart="0dp"
                        android:paddingLeft="0dp" android:gravity="top|left"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text="Customer Reviews"
                    android:layout_width="129dp"
                    android:layout_height="35dp" android:id="@+id/_customerReviewsTextView"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="119dp"
                    android:layout_marginEnd="145dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/_saveReviewButton"/>
            <Button
                    android:text="SAVE REVIEW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/_saveReviewButton"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" android:layout_marginEnd="260dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>