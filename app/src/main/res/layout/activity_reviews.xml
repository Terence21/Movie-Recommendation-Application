<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="temple.edu.yelp_randomizer.activities.ReviewsActivity">
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="228dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="9dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textInputLayout2">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:inputType="textMultiLine|textPersonName"
                android:text="Add Review Here..."
                android:ems="10"
                android:id="@+id/_personalReviewEditText" android:layout_weight="1" android:paddingStart="0dp"
                android:paddingLeft="0dp" android:gravity="top|left"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="393dp"
            android:layout_height="417dp"
            android:id="@+id/_reviewsRecyclerView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            android:layout_marginTop="94dp" app:layout_constraintTop_toBottomOf="@+id/_customerReviewsTextView"/>
    <TextView
            android:text="Customer Reviews"
            android:layout_width="129dp"
            android:layout_height="35dp" android:id="@+id/_customerReviewsTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="122dp"
            android:layout_marginEnd="142dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>