<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ypj2xqjc"
        tools:context=".activities.account.LoginActivity" android:clickable="true"
>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Email"
            android:ems="10"
            android:id="@+id/_username"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/_promptUser" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:layout_marginEnd="110dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/_password"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/_promptPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:layout_marginEnd="110dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_promptUser"
            android:layout_marginEnd="276dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="82dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_promptPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="89dp"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/_username"
            android:layout_marginEnd="259dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="No username or password? "
            android:layout_width="219dp"
            android:layout_height="29dp" android:id="@+id/_promptRegister"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="87dp"
            android:layout_marginEnd="105dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/_registerButton"/>
    <TextView
            android:text="register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_register"
            android:autoLink="web" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/_promptRegister" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="87dp" android:layout_marginEnd="275dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true" app:layout_constraintHorizontal_bias="0.0"
            android:focusable="true"/>
    <Button
            android:text="submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_registerButton"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="210dp" android:layout_marginEnd="113dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.gms.common.SignInButton android:layout_width="193dp"
                                                android:layout_marginTop="93dp"
                                                app:layout_constraintTop_toBottomOf="@+id/_register"
                                                app:layout_constraintStart_toStartOf="parent"
                                                android:layout_marginStart="87dp" android:layout_marginEnd="106dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                android:layout_marginBottom="124dp"
                                                android:id="@+id/_googleSignInButton" android:layout_height="59dp"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="64dp"
            android:id="@+id/imageView"
            app:srcCompat="@drawable/user_profile"
            android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="146dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>