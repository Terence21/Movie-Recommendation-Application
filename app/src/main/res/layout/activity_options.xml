<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.OptionsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="393dp"
            android:layout_height="715dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/_optionsToolbar" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
            android:layout_marginStart="2dp">

        <com.google.android.material.tabs.TabLayout
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:id="@+id/_tabLayout"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        >

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Restaraunts" android:id="@+id/_tabPreviousRestaraunts"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Restaraunts" android:id="@+id/_tabFindRestaraunts"/>
        </com.google.android.material.tabs.TabLayout>
        <FrameLayout
                android:layout_width="396dp"
                android:layout_height="656dp" android:id="@+id/_frameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/_tabLayout">

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="414dp"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/_optionsToolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="-5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>