<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="230dp"
            android:layout_height="176dp" android:id="@+id/_descriptiontextView"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="41dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="514dp"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/_imageView"/>
    <ImageView
            android:layout_width="140dp"
            android:layout_height="105dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/_imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/_addImageButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="521dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/_imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
