<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        app:justifyContent="space_around">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="75dp">

        <TextView
                android:id="@+id/cast_member_full_name_text_view"
                tools:text="@string/cast_member_full_name_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/cast_member_character_name_text_view"
                tools:text="@string/cast_member_character_name_text"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
            android:id="@+id/cast_member_headshot_image_view"
            android:layout_width="75dp"
            android:layout_height="75dp" />


</com.google.android.flexbox.FlexboxLayout>