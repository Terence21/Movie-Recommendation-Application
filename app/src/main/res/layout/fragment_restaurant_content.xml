<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="temple.edu.yelp_randomizer.fragments.RestaurantContentFragment">
    <temple.edu.yelp_randomizer.View.RestaurantView
            android:layout_width="409dp"
            android:layout_height="212dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="35dp" android:id="@+id/_restaurantContentView"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="410dp"
            android:layout_height="131dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/_restaurantContentView" android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:id="@+id/_additionalImageRecycleView"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="408dp"
            android:layout_height="328dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/_additionalImageRecycleView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
            android:id="@+id/_reviewRecycleView"/>
</androidx.constraintlayout.widget.ConstraintLayout>