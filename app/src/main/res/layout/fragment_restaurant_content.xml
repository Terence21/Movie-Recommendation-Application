<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="temple.edu.yelp_randomizer.fragments.RestaurantContentFragment">
    <temple.edu.yelp_randomizer.View.RestaurantView
            android:layout_width="395dp"
            android:layout_height="216dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/_restaurantContentView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
    />
    <temple.edu.yelp_randomizer.View.DetailsView android:layout_width="392dp" android:layout_height="395dp"
                                                 android:id="@+id/_restaurantContentDetailsview"
                                                 android:layout_marginTop="8dp"
                                                 app:layout_constraintTop_toBottomOf="@+id/_restaurantContentView"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="2dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.button.MaterialButton android:layout_width="120dp" android:layout_height="39dp"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       android:layout_marginStart="132dp"
                                                       android:text="Reviews"
                                                       android:id="@+id/_reviewsButton"
                                                       android:layout_marginEnd="141dp"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintHorizontal_bias="1.0"
                                                       android:layout_marginTop="4dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/_restaurantContentDetailsview"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       android:layout_marginBottom="89dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>